<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/history_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            tools:text="Request #5"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/history_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_9ssp"
            tools:text="Status: Completed"
            android:fontFamily="@font/open_sans"
            app:layout_constraintTop_toTopOf="@id/history_id"
            app:layout_constraintBottom_toBottomOf="@id/history_id"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            tools:text="Number: 017xxxxxxxx"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/history_id"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            tools:text="Trx Amount: 50000"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintTop_toBottomOf="@id/phone_number"
            app:layout_constraintStart_toStartOf="@id/phone_number"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            tools:text="Trx Type: Bkash (Send Money)"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintTop_toBottomOf="@id/transaction_amount"
            app:layout_constraintStart_toStartOf="@id/transaction_amount"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/transaction_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            tools:text="Message: Last Number 90"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            app:layout_constraintTop_toTopOf="@id/phone_number"
            app:layout_constraintBottom_toBottomOf="@id/phone_number"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/request_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            tools:text="Requested At: 12:25 AM"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            app:layout_constraintTop_toTopOf="@id/transaction_amount"
            app:layout_constraintBottom_toBottomOf="@id/transaction_amount"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/completion_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            tools:text="Completed At: 12:25 AM"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            app:layout_constraintTop_toTopOf="@id/transaction_type"
            app:layout_constraintBottom_toBottomOf="@id/transaction_type"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>